<?xml version="1.0" encoding="utf-8"?>
<com.example.editeditscanner.view.SquareFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="1dp"
    android:layout_marginTop="1dp">

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <TextView
        android:layout_width="32dp"
        android:id="@+id/iv_bubble"
        android:layout_height="32dp"
        android:text="1"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_gravity="end"
        android:layout_margin="8dp"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:background="@drawable/ic_image_bubble" />
</com.example.editeditscanner.view.SquareFrameLayout>